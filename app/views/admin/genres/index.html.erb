<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-4">
      <h3 class="bg-light rounded px-3 py-2 d-inline-block">ジャンル一覧・追加</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, "ジャンル名", class: "form-label" %>
          <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %>
        </div>
        <%= f.submit "新規登録", class: "btn btn-success px-4" %>
      <% end %>
    </div>
    <div class="col-md-7">
      <table class="table bg-white">
        <thead class="bg-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success px-4" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container mt-4">
  <h3 class="bg-light rounded px-3 py-2 d-inline-block mb-4">
    <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
  </h3>
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, local: true do |f| %>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">会員ID</label>
      <div class="col-sm-4 pt-2">
        <%= @customer.id %>
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">氏名</label>
      <div class="col-sm-2">
        <%= f.text_field :last_name, class: "form-control", style: "max-width: 120px;" %>
      </div>
      <div class="col-sm-2">
        <%= f.text_field :first_name, class: "form-control", style: "max-width: 120px;" %>
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">フリガナ</label>
      <div class="col-sm-2">
        <%= f.text_field :last_name_kana, class: "form-control", style: "max-width: 120px;" %>
      </div>
      <div class="col-sm-2">
        <%= f.text_field :first_name_kana, class: "form-control", style: "max-width: 120px;" %>
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">郵便番号</label>
      <div class="col-sm-4">
        <%= f.text_field :postal_code, class: "form-control", style: "max-width: 150px;" %>
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">住所</label>
      <div class="col-sm-6">
        <%= f.text_field :address, class: "form-control", style: "max-width: 400px;" %>
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">電話番号</label>
      <div class="col-sm-4">
        <%= f.text_field :telephone_number, class: "form-control", style: "max-width: 200px;" %>
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">メールアドレス</label>
      <div class="col-sm-6">
        <%= f.email_field :email, class: "form-control fw-bold", style: "max-width: 300px;" %>
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">会員ステータス</label>
      <div class="col-sm-6 d-flex align-items-center">
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_active, true, class: "form-check-input" %>
          <%= f.label :is_active, "有効", value: true, class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_active, false, class: "form-check-input" %>
          <%= f.label :is_active, "退会", value: false, class: "form-check-label" %>
        </div>
      </div>
    </div>
    <div class="text-center mt-2">
      <%= f.submit "変更を保存", class: "btn btn-success px-5 my-2 fs-5 fw-bold" %>
    </div>
  <% end %>
</div>

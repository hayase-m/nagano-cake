<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-4">
      <h3 class="bg-light rounded px-3 py-2 d-inline-block">商品新規登録</h3>
    </div>
  </div>
  <%= form_with model: @item, url: admin_items_path, method: :post, local: true do |f| %>
    <div class="row mb-3">
      <%= f.label :item_image, "商品画像", class: "col-md-3 col-form-label" %>
      <div class="col-md-9">
        <%= f.file_field :item_image, accept: "image/*" %>
      </div>
    </div>
    <div class="row mb-3">
      <%= f.label :name, "商品名", class: "col-md-3 col-form-label" %>
      <div class="col-md-9">
        <%= f.text_field :name, class: "w-100", placeholder: "商品名" %>
      </div>
    </div>
    <div class="row mb-3">
      <%= f.label :introduction, "商品説明", class: "col-md-3 col-form-label" %>
      <div class="col-md-9">
        <%= f.text_area :introduction, class: "w-100", rows: 5, placeholder: "ここに説明文を記述します" %>
      </div>
    </div>
    <div class="row mb-3">
      <%= f.label :genre_id, "ジャンル", class: "col-md-3 col-form-label" %>
      <div class="col-md-9">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "-- 選択してください --" }, { class: "form-select" } %>
      </div>
    </div>
    <div class="row mb-3">
      <%= f.label :price, "税抜価格", class: "col-md-3 col-form-label" %>
      <div class="col-md-9">
        <div class="input-group" style="max-width: 300px;">
          <%= f.number_field :price, class: "form-control", placeholder: "1000" %>
          <span class="input-group-text">円</span>
        </div>
      </div>
    </div>
    <div class="row mb-3 align-items-center">
      <%= f.label :is_active, "販売ステータス", class: "col-md-3 col-form-label" %>
      <div class="col-md-9">
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_active, true, class: "form-check-input", checked: true %>
          <%= f.label :is_active_true, "販売中", class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_active, false, class: "form-check-input" %>
          <%= f.label :is_active_false, "販売停止中", class: "form-check-label" %>
        </div>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col text-center">
        <%= f.submit "新規登録", class: "btn btn-success px-5" %>
      </div>
    </div>
  <% end %>
</div>

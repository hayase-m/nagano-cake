<div class="container w-50 mt-2">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="border border-secondary mx-3 my-3 rounded d-inline-block">ログイン</h2>
      <div class="m-3">会員の方はこちらからログイン</div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email,"メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password,"パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,"ログイン情報を保存する" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" %>  
        </div>
      <% end %>
      <div class="m-3">会員登録がお済みでない方</div>
      <%= render "public/shared/links" %>
      <span>から新規登録を行ってください。</span>
    </div>
  </div>
</div>
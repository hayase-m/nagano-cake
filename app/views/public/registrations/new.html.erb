<div class="container w-50 mt-2">
  <h2 class="my-5">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row my-2">
      <div class="col-md-2">
        名前
      </div>
      <div class="col-md-5">
        <div class="field">
          <%= f.label :last_name,"（性）" %>
          <%= f.text_field :last_name, autofocus: false%>
        </div>
      </div>
      <div class="col-md-5">
        <div class="field">
          <%= f.label :first_name,"（名）" %>
          <%= f.text_field :first_name, autofocus: false %>
        </div>
      </div>
    </div> 

    <div class="row my-2">
      <div class="col-md-2">
        フリガナ
      </div>
      <div class="col-md-5">
        <div class="field">
          <%= f.label :last_name_kana,"（セイ）" %>
          <%= f.text_field :last_name_kana, autofocus: false%>
        </div>
      </div>
      <div class="col-md-5">
        <div class="field">
          <%= f.label :first_name,"（メイ）" %>
          <%= f.text_field :first_name_kana, autofocus: false %>
        </div>
      </div>
    </div> 

    <div class="row my-2">
      <div class="col-md-3">
        メールアドレス
      </div>
      <div class="col-md-9">
        <div class="field">
          <%# <%= f.label :email,"" %> 
          <%= f.text_field :email, autofocus: false, autocomplete: "email"%>
        </div>
      </div>
    </div> 

    <div class="row my-2">
      <div class="col-md-4">
        郵便番号（ハイフンなし）
      </div>
      <div class="col-md-8">
        <div class="field">
          <%# <%= f.label :email,"" %> 
          <%= f.text_field :postal_code, autofocus: false%>
        </div>
      </div>
    </div> 

    <div class="row my-2">
      <div class="col-md-2">
        住所
      </div>
      <div class="col-md-10">
        <div class="field">
          <%# <%= f.label :email,"" %> 
          <%= f.text_field :address, size: 50, autofocus: false%>
        </div>
      </div>
    </div> 

    <div class="row my-2">
      <div class="col-md-4">
        電話番号（ハイフンなし）
      </div>
      <div class="col-md-8">
        <div class="field">
          <%# <%= f.label :email,"" %> 
          <%= f.text_field :telephone_number, autofocus: false%>
        </div>
      </div>
    </div> 

    <div class="row my-2">
      <div class="col-md-4">
        パスワード          
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="field">
          <%#= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
    </div> 

    <div class="row my-2">
      <div class="col-md-4">
        パスワード（確認用）
      </div>
      <div class="col-md-8">
        <div class="field">
          <%#= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    </div> 

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
  <div class="mt-3">
    <h3>既に登録済みの方</h3>
    <%= render "public/shared/links" %>
    からログインしてください
  </div>
</div>
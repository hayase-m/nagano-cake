<div class="container mt-3">
  <div class="row">
    <h3 class="col-md-3 bg-light rounded text-black p-2">会員情報編集</h3>
  </div>
  <%= form_with(model: @customer, url: customers_information_path, local: true) do |f| %>
    <div class="row mb-3">
      <%= f.label :last_name, "氏名", class: "col-md-2 col-form-label" %>
      <div class="col-md-3">
        <%= f.text_field :last_name%>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="row mb-3">
      <%= f.label :last_name_kana, "フリガナ", class: "col-md-2 col-form-label" %>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
    <div class="row mb-3">
      <%= f.label :postal_code, "郵便番号", class: "col-md-2 col-form-label" %>
      <div class="col-md-4">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    <div class="row mb-3">
      <%= f.label :address, "住所", class: "col-md-2 col-form-label" %>
      <div class="col-md-10">
        <%= f.text_field :address, class: "w-50" %>
      </div>
    </div>
    <div class="row mb-3">
      <%= f.label :telephone_number, "電話番号", class: "col-md-2 col-form-label" %>
      <div class="col-md-4">
        <%= f.text_field :telephone_number %>
      </div>
    </div>
    <div class="row mb-3">
      <%= f.label :email, "メールアドレス", class: "col-md-2 col-form-label" %>
      <div class="col-md-10">
        <%= f.email_field :email %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-md-3">
        <%= f.submit "編集内容を保存", class: "btn btn-success w-100" %>
      </div>
      <div class="col-md-2 offset-md-1">
        <%= link_to "退会する", customers_withdraw_path, method: :patch, data: { confirm: "本当に退会しますか？" }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
